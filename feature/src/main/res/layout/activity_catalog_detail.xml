<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CatalogDetail">

    <ImageView
            android:layout_width="297dp"
            android:layout_height="264dp" app:srcCompat="@drawable/detail"
            android:id="@+id/detail_image"
            android:contentDescription="detail image" android:visibility="visible" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:id="@+id/favs" android:background="@drawable/favs"
            style="@android:style/Widget.Material.Light.Button.Borderless.Small"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Lipstick Chanel Roug"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:id="@+id/product_name" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.033" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/detail_image"/>
    <TextView
            android:text="3.0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.022" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/product_name"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/avatar"
            android:id="@+id/avatar" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/user_name"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Карина Валентиновна"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_name" app:layout_constraintEnd_toStartOf="@+id/date" android:layout_marginEnd="88dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="@+id/avatar"/>
    <TextView
            android:text="21/01/2018"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/date" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/user_name"/>
    <TextView
            android:text="Могло бы быть и лучше, что поделать, отвратительное качество раскрученного бренда, не могу советовать для людей с чувствительной кожей губ и для людей с тонкой душевной организацией."
            android:layout_width="354dp"
            android:layout_height="82dp"
            android:id="@+id/comment"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/avatar"/>
    <ImageView
            android:layout_width="27dp"
            android:layout_height="25dp" app:srcCompat="@drawable/like"
            android:id="@+id/like" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/comment" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="234"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/like_count" android:layout_marginTop="4dp"
            app:layout_constraintTop_toTopOf="@+id/like" app:layout_constraintStart_toEndOf="@+id/like"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>

</android.support.constraint.ConstraintLayout>